<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/row_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_toRightOf="@+id/logo">

                <TextView
                    android:id="@+id/college_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="demo_text"
                    android:textColor="@color/secondary_text"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/college_id"
                    android:text="demo_tex"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:text="demo_text"
                    android:textColor="@color/secondary_text"
                    android:textSize="9sp" />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


    <!--<TextView
        android:id="@+id/metric_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_"
        android:gravity="center"
        android:padding="@dimen/dimen8"
        android:text="Teaching and Learning"
        android:textSize="21dp" />-->


    <LinearLayout
        android:id="@+id/anal_layer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_one"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen8"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:weightSum="3.004">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_india"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen8"
                android:paddingRight="@dimen/dimen8"
                android:text="-"
                android:textColor="@color/c1"
                android:textSize="32sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen8"
                android:text="All India Rank"
                android:textColor="@color/primary_text"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/overall_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen8"
                android:paddingRight="@dimen/dimen8"
                android:text="-"
                android:textColor="@color/d1"
                android:textSize="32sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen8"
                android:text="Overall Score"
                android:textColor="@color/primary_text"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>