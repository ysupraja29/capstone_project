<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main_layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin" android:orientation="vertical">

    <LinearLayout android:id="@+id/heading" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView android:id="@+id/profile" android:layout_width="30dp"
                android:layout_height="30dp" android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/dimen8" android:contentDescription="@string/sign_out"
                android:src="@drawable/place_holder" />

            <ImageView android:id="@+id/google_icon" android:layout_width="100dp"
                android:layout_height="100dp" android:layout_centerHorizontal="true"
                android:contentDescription="@string/desc_nirf_mainlogo"
                android:src="@drawable/main_logo" />

            <ImageView android:id="@+id/sign_out_button" android:layout_width="30dp"
                android:layout_height="30dp" android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimen8" android:contentDescription="@string/sign_out"
                android:src="@drawable/logout" />
        </RelativeLayout>

        <com.egnify.nirf.utils.MyCustomTextViewMbold android:id="@+id/title_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/nirf_main_heading" />

        <com.egnify.nirf.utils.MyCustomTextViewRegular android:id="@+id/sub_title_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen4" android:text="@string/nirf_sub_heading"
            android:textSize="12sp" />

        <com.egnify.nirf.utils.MyCustomTextViewRegular android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen4"
            android:text="@string/nirf_sub_heading2" android:textSize="12sp" />


    </LinearLayout>


    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/heading"

        android:layout_marginTop="96dp">

        <com.google.android.gms.common.SignInButton android:id="@+id/sign_in_button"
            android:layout_width="300dp" android:layout_height="wrap_content"
            android:layout_centerInParent="true" android:visibility="visible"
            tools:visibility="gone" />

        <LinearLayout android:id="@+id/sign_out_and_disconnect" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerInParent="true"
            android:orientation="vertical" android:visibility="gone" android:weightSum="1"
            tools:visibility="visible">

            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="0.5" android:orientation="horizontal" android:weightSum="1">

                <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="0.5" android:background="@color/university"
                    android:gravity="center" android:orientation="vertical" android:weightSum="1">

                    <ImageView android:id="@+id/uni_iv" android:layout_width="match_parent"
                        android:layout_height="80dp" android:contentDescription="@string/uni_iv_des"
                        android:paddingTop="@dimen/dimen8" />

                    <com.egnify.nirf.utils.MyCustomTextViewMbold android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_gravity="center"
                        android:padding="@dimen/dimen4" android:text="@string/university"
                        android:textColor="@color/white" android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="0.5" android:background="@color/engg"
                    android:gravity="center" android:orientation="vertical" android:weightSum="1">

                    <ImageView android:id="@+id/engg_iv" android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/engg_iv_des"
                        android:paddingTop="@dimen/dimen8" />

                    <com.egnify.nirf.utils.MyCustomTextViewMbold android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_gravity="center"
                        android:padding="@dimen/dimen4" android:text="@string/engg"
                        android:textColor="@color/white" android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="0.5" android:orientation="horizontal">

                <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="0.5" android:background="@color/manage"
                    android:gravity="center" android:orientation="vertical" android:weightSum="1">

                    <ImageView android:id="@+id/manag_iv" android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/manag_iv_des"
                        android:paddingTop="@dimen/dimen8" />

                    <com.egnify.nirf.utils.MyCustomTextViewMbold android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_gravity="center"
                        android:padding="@dimen/dimen4" android:text="@string/managment"
                        android:textColor="@color/white" android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="0.5" android:background="@color/phram"
                    android:gravity="center" android:orientation="vertical" android:weightSum="1">

                    <ImageView android:id="@+id/pharm_iv" android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/pharm_iv_des"
                        android:paddingTop="@dimen/dimen8" />

                    <com.egnify.nirf.utils.MyCustomTextViewMbold android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_gravity="center"
                        android:padding="@dimen/dimen4" android:text="@string/pharm"
                        android:textColor="@color/white" android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
