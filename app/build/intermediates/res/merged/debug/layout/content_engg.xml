<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_engg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.egnify.nirf.MainScreen.EnggActivity"
    tools:showIn="@layout/activity_engg">

    <LinearLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dimen8"
        android:weightSum="5.5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="12dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_toRightOf="@+id/logo"
                android:gravity="center">

                <com.egnify.nirf.utils.p_MyCustomTextView_bold
                    android:id="@+id/college_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Institute"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <com.egnify.nirf.utils.p_MyCustomTextView_bold
            android:id="@+id/score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/college_id"
            android:layout_weight=".9"
            android:drawableRight="@drawable/menu_up"
            android:gravity="center"
            android:text="@string/score"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <com.egnify.nirf.utils.p_MyCustomTextView_bold
            android:id="@+id/rank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/college_id"
            android:layout_weight=".9"
            android:drawableRight="@drawable/menu_up"
            android:gravity="center"
            android:text="@string/rank"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_coun_students"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/heading"
        android:layout_marginBottom="60dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#071E2C"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="6">

        <LinearLayout
            android:id="@+id/all"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/all_iv"

                android:layout_width="35dp"
                android:layout_height="25dp"
                android:src="@drawable/rpc" />

            <com.egnify.nirf.utils.p_MyCustomTextView_mbold
                android:id="@+id/all_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/all"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tlr"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tlr_iv"

                android:layout_width="35dp"
                android:layout_height="25dp"
                android:src="@drawable/tlr" />


            <com.egnify.nirf.utils.p_MyCustomTextView_mbold
                android:id="@+id/tlr_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tlr"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rpc"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rpc_iv"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:src="@drawable/rpc" />

            <com.egnify.nirf.utils.p_MyCustomTextView_mbold
                android:id="@+id/rpc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/rpc"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/go"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/go_iv"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:src="@drawable/go" />

            <com.egnify.nirf.utils.p_MyCustomTextView_mbold
                android:id="@+id/go_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/go"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/oi"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/oi_iv"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:src="@drawable/oi" />

            <com.egnify.nirf.utils.p_MyCustomTextView_mbold
                android:id="@+id/oi_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/oi"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/per"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/per_iv"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:src="@drawable/per" />

            <com.egnify.nirf.utils.p_MyCustomTextView_mbold
                android:id="@+id/per_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/per"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_data_available"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/retry_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.egnify.nirf.utils.p_MyCustomTextView_mbold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/noconnection"
            android:textColor="@color/red"
            android:textSize="21sp" />

        <Button
            android:id="@+id/retry"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/a2"
            android:text="@string/retry"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>
